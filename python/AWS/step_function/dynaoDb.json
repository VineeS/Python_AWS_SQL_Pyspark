{
    "Comment": "A Step Function for Dynamo DB Transaction StateMachine",
    "StartAt": "ProcessTransaction",
    "States": {
      "ProcessTransaction": {
        "Type": "Pass",
        "Next": "StoreHistory"
      },
      "StoreHistory": {
        "Type": "Task",
        "Resource": "arn:aws:states:::dynamodb:putItem",
        "Parameters": {
          "TableName": "MyStepFunctionDynamoDB",
          "Item": {
            "TransactionId": {
              "S.$.": "S.$.TransactionId"
            }
          }
        },
        "Retry": [
          {
            "ErrorEquals": [
              "States.ALL"
            ],
            "IntervalSeconds": 1,
            "MaxAttempts": 3
          }
        ],
        "End": true,
        "ResultPath": "$.DynamoDB"
      }
    }
  }